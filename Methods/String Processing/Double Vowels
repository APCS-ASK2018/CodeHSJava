public String doubleVowel(String str)
{
    String result = "";
    for(int i = 0,j=str.length() ; i<j ; i++) {
        char c = str.charAt(i);
        char low = Character.toLowerCase(c);
        result += String.valueOf(c);
        if(low == 'a' || low == 'e' || low == 'i' || low == 'o' || low == 'u')
            result += String.valueOf(c);
    }
    
    return result;
}
